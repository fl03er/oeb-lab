{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "types": ["vite/client"],

    "noUnusedLocals": false,      // ✅ 미사용 변수 허용
    "noUnusedParameters": false   // ✅ 미사용 파라미터 허용
  },
  "include": ["src"]
}